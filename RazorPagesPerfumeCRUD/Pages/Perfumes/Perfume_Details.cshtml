@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPagesPerfumeCRUD.Pages.Perfumes.Perfume_DetailsModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
    <style>
        .textStyle {
            font-weight: bold;
            border: 3px solid darkred;
        }
    </style>
</head>
<body>
    <h3>@Model.PerfumeId.Name</h3>

    <!-- таблица для вывода объектов -->
    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th>@Model.PerfumeId.Brand</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-secondary">
                <td>@Model.PerfumeId.Description</td>
            </tr>
            <tr class="table-secondary">
                <td>Ноты: @Model.PerfumeId.Notes</td>
            </tr>
            <tr class="table-secondary">
                <td>@Model.PerfumeId.Gender</td>
            </tr>
            <tr class="table-secondary">
                <td>@(Model.PerfumeId.Volume+" ml")</td>
            </tr>
            <tr class="table-success">
                <td class="textStyle">@(Model.PerfumeId.Price + " руб.")</td>
            </tr>
        </tbody>
    </table>

    <p><a asp-page="/Perfumes/Perfume_List">Вернуться к ассортименту парфюма</a></p>
    <p><a asp-page="/Index">Главная страница</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>