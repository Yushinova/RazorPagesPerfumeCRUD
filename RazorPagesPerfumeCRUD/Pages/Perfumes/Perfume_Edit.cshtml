@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPagesPerfumeCRUD.Pages.Perfumes.Perfume_EditModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
    <style>
        form {
            width: 60vw;
            margin-left: 20px;
        }

        button {
            margin-top: 20px;
        }
        .lastDiv{
            margin-top: 20px;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <h3>Редактирование @Model.PerfumeEdit.Id @Model.PerfumeEdit.Name</h3>
    <form method="post" action="">
        <input type="number" id="id" name="id" value="@Model.PerfumeEdit.Id" hidden/>
        <div class="mb-3">
            <label for="name" class="form-label">Наименование парфюма</label>
            <input type="text" class="form-control" id="name" name="name" min="1" value="@Model.PerfumeEdit.Name" required>
        </div>
        <div class="mb-3">
            <label for="brand" class="form-label">Брэнд</label>
            <input type="text" class="form-control" id="brand" name="brand" min="1" value="@Model.PerfumeEdit.Brand" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Описание</label>
            <input type="text" class="form-control" id="description" name="description" min="1" value="@Model.PerfumeEdit.Description" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="gender">Половая принадлежность аромата</label>
            <select class="form-select" name="gender" aria-label="Пол">
                <option selected="@(Model.PerfumeEdit.Gender=="women")" value="women">Женский</option>
                <option selected="@(Model.PerfumeEdit.Gender=="men")" value="men">Мужской</option>
                <option selected="@(Model.PerfumeEdit.Gender=="unisex")" value="unisex">Унисэкс</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="notes" class="form-label">Ноты аромата</label>
            <input type="text" class="form-control" id="notes" name="notes" min="1" value="@Model.PerfumeEdit.Notes" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="volume">Объем флакона</label>
            <select class="form-select" name="volume" aria-label="Объем">
                <option selected="@(Model.PerfumeEdit.Volume==50)" value="50">50 мл</option>
                <option selected="@(Model.PerfumeEdit.Volume==75)" value="75">75 мл</option>
                <option selected="@(Model.PerfumeEdit.Volume==100)" value="100">100 мл</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Цена</label>
            <input type="number" class="form-control" id="price" name="price" min="1" value="@Convert.ToDouble(Model.PerfumeEdit.Price)" required>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" name="isSale" id="isSale" checked="@Model.PerfumeEdit.isSale" value="true">
            <label class="form-check-label" for="sale">Акция</label>
        </div>
        <div class="mb-3 lastDiv" >

            <!-- кнопка отправки формы -->
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-page="/Perfumes/Perfume_List">
                <input style="margin-top:20px" type="button" class="btn btn-secondary" value="Отменить" />
            </a>
        </div>

        <!-- кнопка отмены (не submit) -->
       
    </form>


    <p><a asp-page="/Perfumes/Perfume_List">Вернуться к ассортименту парфюма</a></p>
    <p><a asp-page="/Index">Главная страница</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
