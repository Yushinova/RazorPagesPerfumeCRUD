@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPagesPerfumeCRUD.Pages.Perfumes.Perfume_DeleteModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
    <style>
        .saleTable {
            font-weight: bold;
            border: 3px solid darkred;
        }
        .marginStyle{
            margin-left:20px;
        }
    </style>
</head>
<body>
    <h3>Удаление ID: @Model.DeletPerfume.Id Name: @Model.DeletPerfume.Name</h3>

    <p>
        Вы действительно хотите удалить запись?
    </p>
    <!-- форма удаления -->
    <form class="marginStyle" method="post" action="">
        <!-- скрытое поле id удаляемой записи -->
        <input type="number" name="id" value="@Model.DeletPerfume.Id" hidden />
        <!-- кнопка отправки формы -->
        <button type="submit" class="btn btn-secondary">Удалить</button>
        <!-- кнопка отмены (не submit) -->
        <a asp-page="/Perfumes/Perfume_List">
            <input type="button" class="btn btn-light" value="Отменить" />
        </a>
    </form>

    <p><a asp-page="/Perfumes/Perfume_List">Вернуться к ассортименту парфюма</a></p>
    <p><a asp-page="/Index">Главная страница</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>