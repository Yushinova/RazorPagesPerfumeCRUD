@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPagesPerfumeCRUD.Pages.Perfumes.Perfume_ListModel
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
    <style>
        .saleTable {
            font-weight: bold;
            border: 3px solid darkred;
        }
        .textStyle{
            font-size:small;
            font-weight:lighter;
        }
    </style>
</head>
<body>
    <h3>Ассортимент продукции</h3>

    <!-- таблица для вывода объектов -->
    <table class="table">
        <!-- шапка таблицы -->
        <thead>
            <tr class="table-primary">
                <th>Наименование</th>
                <th>Бренд</th>
                <th>Пол</th>
                <th>Объем<br /> мл</th>
                <th>Цена</th>
                <th>Акция</th>
                <th>Действия</th>
                <th>Детали</th>
            </tr>
        </thead>
        <!-- тело таблицы -->
        @foreach(var elements in Model.Perfumes){
            string myclass = "";
            if(elements.isSale){
                myclass = "saleTable";
            }
            <tr class="table-primary @myclass">
                <td>@elements.Name</td>
                <td>@elements.Brand</td>
                <td>@elements.Gender</td>
                <td>@elements.Volume</td>
                <td>@elements.Price</td>
                <td>@(elements.isSale? "SALE":"-")</td>
                <!-- действия -->
                <td class="textStyle">
                    <a asp-page="/Perfumes/Perfume_Delete" asp-route-id="@elements.Id">Удалить</a>
                    <a asp-page="/Perfumes/Perfume_Edit" asp-route-id="@elements.Id">Редактировать</a>
                </td>
                <td class="textStyle">
                    <a style="font-size:larger; font-weight:bold" asp-page="/Perfumes/Perfume_Details" asp-route-id="@elements.Id">
                     ...
                    </a>
                </td>
            </tr>
        }
        <tbody>
           
        </tbody>
    </table>

    <p><a asp-page="/Perfumes/Perfume_Create">Добавить новый элемент в список</a></p>
    <p><a asp-page="/Index">Главная страница</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
