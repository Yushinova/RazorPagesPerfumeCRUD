@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPagesPerfumeCRUD.Pages.Perfumes.Perfume_CreateModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
    <style>
        form{
            width:60vw;
            margin-left: 20px;
        }
        button{
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h3>Создание новой записи</h3>
    <form method="post" action="">
        <div class="mb-3">
            <label for="name" class="form-label">Наименование парфюма</label>
            <input type="text" class="form-control" id="name" name="name" min="1" required>
        </div>
        <div class="mb-3">
            <label for="brand" class="form-label">Брэнд</label>
            <input type="text" class="form-control" id="brand" name="brand" min="1" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Описание</label>
            <input type="text" class="form-control" id="description" name="description" min="1" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="gender">Половая принадлежность аромата</label>
            <select class="form-select" name="gender" aria-label="Пол">
                <option selected value="women">Женский</option>
                <option value="men">Мужской</option>
                <option value="unisex">Унисэкс</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="notes" class="form-label">Ноты аромата</label>
            <input type="text" class="form-control" id="notes" name="notes" min="1" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="volume">Объем флакона</label>
            <select class="form-select" name="volume" aria-label="Пол">
                <option selected value="50">50 мл</option>
                <option value="75">75 мл</option>
                <option value="100">100 мл</option>
            </select>
            </div>
        <div class="mb-3">
            <label for="price" class="form-label">Цена</label>
            <input type="number" class="form-control" id="price" name="price" min="1" required>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" name="isSale" id="isSale" checked value="true">
            <label class="form-check-label" for="sale">Акция</label>
        </div>
        <div class="mb-3">
            
            <!-- кнопка отправки формы -->
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
        
    </form>
    

    <p><a asp-page="/Perfumes/Perfume_List">Вернуться к ассортименту парфюма</a></p>
    <p><a asp-page="/Index">Главная страница</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
